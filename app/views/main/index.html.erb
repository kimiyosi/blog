<div class="uk-margin">
  <%= render partial: "google_ad" %>
</div>

<div class="uk-grid-match uk-grid uk-text-center uk-margin list" uk-grid>
  <% @reports.each_with_index { |report, i| -%>
  <% case i -%>
  <% when 0 -%>
  <div class="uk-width-2-3@m">
    <%= grid_contents(report, card_css: "first", title_css: "uk-heading-medium", desc_css: "uk-text-lead") %>
  </div>
  <% when 1 %>
  <div class="uk-width-1-3@m">
    <%= grid_contents(report, card_css: "uk-margin") %>
  <% when 2 %>
    <%= grid_contents(report) %>
  </div>
  <% else %>
  <div class="uk-width-1-3@m">
    <%= grid_contents(report) %>
  </div>
  <% end %>
  <% } %>
</div>