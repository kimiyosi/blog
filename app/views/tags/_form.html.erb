<% if @tag.code %>
  <%= form.hidden_field :code, value: @tag.code  %>
<% else %>
  <%= form.hidden_field :code, value: Tag.new_code %>
<% end %>

<div class="uk-margin">
  <%= form.label :name %>
  <%= form.text_field :name, {class: "uk-input black_border",  placeholder: "name"} %>
  <%= full_error_message_on(:tag, :name) %>
</div>

<div class="uk-margin uk-text-center">
  <%= form.submit "Create", {class: "uk-button uk-button-primary"} %>
</div>